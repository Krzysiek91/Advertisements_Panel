{% extends 'base.html.twig' %}

{% block body %}
    <h1>Advertisement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ advertisement.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ advertisement.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ advertisement.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ advertisement.photo }}</td>
            </tr>
            <tr>
                <th>Expirationdate</th>
                <td>{% if advertisement.expirationDate %}{{ advertisement.expirationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ advertisement.user }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('advertisement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('advertisement_edit', { 'id': advertisement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

    {% for comment in comments %}

        <p>{{ comment.comment }}</p>

    {% endfor %}

{% endblock %}
